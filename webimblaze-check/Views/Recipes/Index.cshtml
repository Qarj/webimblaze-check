@model webimblaze_check.Models.RecipeCuisineViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Recipes" asp-action="Index" method="get">
    <p>
        <select asp-for="recipeCuisine" asp-items="Model.cuisines">
            <option value="">All</option>
        </select>

        Title: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.recipes[0].CreateDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.recipes[0].DelaySeconds)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.recipes[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.recipes[0].Cuisine)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.recipes[0].Serves)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.recipes[0].Vegetarian)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.recipes) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DelaySeconds)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cuisine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Serves)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vegetarian)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
